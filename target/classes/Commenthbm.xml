<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.dealerStat.models.Comment" table="comment" schema="public" catalog="DealerStat">
        <composite-id mapped="true" class="com.dealerStat.models.CommentPK">
            <key-property name="id">
                <column name="id" sql-type="integer"/>
            </key-property>
            <key-property name="idUser">
                <column name="id_user" sql-type="integer"/>
            </key-property>
        </composite-id>
        <property name="message">
            <column name="message" sql-type="varchar(2000)" length="2000"/>
        </property>
        <property name="approved">
            <column name="approved" sql-type="varchar(10)" length="10"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="date"/>
        </property>
    </class>
</hibernate-mapping>