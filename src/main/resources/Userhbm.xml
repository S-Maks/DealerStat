<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.dealerStat.models.User" table="user" schema="public" catalog="DealerStat">
        <id name="id" type = "java.lang.Integer" column = "id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="firstName">
            <column name="first_name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="date"/>
        </property>
        <property name="role">
            <column name="role" sql-type="varchar(20)" length="20"/>
        </property>
    </class>
</hibernate-mapping>